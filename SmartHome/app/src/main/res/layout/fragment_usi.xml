<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/casute"
        android:clipToPadding="false"
        android:outlineProvider="bounds"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="6dp"
            android:textColor="@android:color/black"
            android:text="Usa intrare"
            android:textSize="24sp"/>

        <WebView
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:id="@+id/webViewUsa"
            android:background="@color/deepBlack"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
        <Button
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:textColor="@android:color/white"
            android:layout_marginRight="4dp"
            android:background="@drawable/btnverde"
            android:text="Deschide usa"/>
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginLeft="4dp"
                android:textColor="@android:color/white"
                android:background="@drawable/btnverde"
                android:text="Intrari"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/casute"
        android:clipToPadding="false"
        android:outlineProvider="bounds"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="6dp"
            android:textColor="@android:color/black"
            android:text="Bariera parcare"
            android:textSize="24sp"/>
        <WebView
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:id="@+id/webViewBariera"
            android:background="@color/deepBlack"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:textColor="@android:color/white"
                android:layout_marginRight="4dp"
                android:background="@drawable/btnverde"
                android:text="Ridica bariera"/>
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginLeft="4dp"
                android:textColor="@android:color/white"
                android:background="@drawable/btnverde"
                android:text="Intrari"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>