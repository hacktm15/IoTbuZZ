<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/casute"
        android:clipToPadding="false"
        android:elevation="2dp"
        android:orientation="vertical"
        android:outlineProvider="bounds">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="6dp"
            android:text="Temperatura"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/deepBlack"
            android:gravity="center"
            android:text="25Â°C"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btnverde"
            android:text="Seteaza temperatura"
            android:textColor="@android:color/white" />

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/chartTemperatura"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/casute"
        android:clipToPadding="false"
        android:elevation="2dp"
        android:orientation="vertical"
        android:outlineProvider="bounds">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="6dp"
            android:text="Umiditate"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/deepBlack"
            android:gravity="center"
            android:text="13%"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/chartUmiditate"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
    </LinearLayout>
</LinearLayout>